{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "spotify": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "clientId": {
                    "type": "string",
                    "default": "<Client ID for spotify application>"
                },
                "clientSecret": {
                    "type": "string",
                    "default": "<Client Secret for spotify application>"
                },
                "redirectUri": {
                    "type": "string",
                    "default": "http://localhost:9090/nodecg-spotify-widget/spotify_callback"
                }
            }
        }
    }
}